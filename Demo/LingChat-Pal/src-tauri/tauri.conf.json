{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lingchat-pal",
  "version": "0.1.0",
  "identifier": "com.lingchat-pal.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "lingchat-pal",
        "width": 260,
        "height": 380,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "shadow": false,
        "fullscreen": false,
        "resizable": false,
        "maximized": false
      },
      {
        "label": "second",
        "title": "第二个窗口",
        "width": 600,
        "height": 400,
        "resizable": true,
        "transparent": true,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
